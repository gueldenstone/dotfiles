{{ else if eq .chezmoi.hostname "c-de-006195" }}
export PATH=$HOME/.local/bin:$PATH
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"
  export XCODES_DIRECTORY=~/dev/tools/xcode
